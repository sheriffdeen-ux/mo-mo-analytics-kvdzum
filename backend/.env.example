# Resend Email Configuration
# Required: Get API key from https://resend.com/register
RESEND_API_KEY=re_xxxxxxxxxxxx

# Email Verification Control
# true (default): Require email verification (production)
# false: Auto-approve email, return OTP in response (development)
REQUIRE_EMAIL_VERIFICATION=true

# Email Sender Configuration
SENDER_EMAIL=noreply@momo-analytics.app
SENDER_NAME=MoMo Analytics

# Database Configuration
# (Your existing database configuration)
DATABASE_URL=postgresql://user:password@localhost:5432/momo_analytics

# Authentication
# Token expiration in seconds (30 days = 2592000)
TOKEN_EXPIRATION_SECONDS=2592000

# Better Auth Configuration
# (Your existing Better Auth configuration)
BETTER_AUTH_SECRET=your_secret_key_here
BETTER_AUTH_URL=http://localhost:3000

# Optional: Node Environment
NODE_ENV=development

# Optional: Server Configuration
PORT=3000
HOST=0.0.0.0
